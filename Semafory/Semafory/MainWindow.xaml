<Window x:Class="Semafory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semafory"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="canvas" Height="300" Width="300">
            <!--<Line X1="10" Y1="10" X2="10" Y2="50" Stroke="Black" StrokeThickness="2" />
            <Line X1="10" Y1="50" X2="50" Y2="50" Stroke="Black" StrokeThickness="2" ></Line>-->
        </Canvas>
        <TextBox x:Name="txtIteration" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="94" Click="btnStart_Click"/>
        <Button x:Name="btnDraw" Content="Rysuj" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="94" Click="btnRysuj_Click"/>
    </Grid>
</Window>
